<img src="<%= @question.img_link %>" style="width:304px;height:228px;">

<h1 id="page-header"><%= @question.body %></h1>

<center>
<% @answers.each do |answer| %>
<table style="width:75%">
  <tr>
    <td><%= answer.vote_count %><form class="upvote" action='/questions/<%= @question.id %>/answers/<%= answer.id %>/vote' method="POST">
      <input type="hidden" name="_method" value="PUT">
      <input type="submit" class="answer_upvote_button" value="👍 ">
    </form></td>
    <td><%= answer.text %></td>
  </tr>
</table>
<% end %>

<% if current_user %>
  <form id="answers" method="post" action="/questions/<%= @question.id %>/answers">
    <input type="text" name="answer[text]" placeholder="answer">
    <input type="submit" value="submit new answer">
  </form>
<% end %>
</center>
